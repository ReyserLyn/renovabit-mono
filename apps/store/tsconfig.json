{
  "extends": "@renovabit/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@renovabit/ui/*": ["../../packages/ui/src/*"],
      "@renovabit/db/*": ["../../packages/db/*"],
      "@renovabit/auth/*": ["../../packages/auth/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts",
    "../../packages/ui/src/components/logo/logo-google.tsx",
    "../../packages/ui/src/components/logo/logo-peru.tsx"
  ],
  "exclude": ["node_modules", ".next"]
}
