{
  "name": "renovabit",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "oxlint",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "oxlint": "^1.17.0",
    "turbo": "^2.5.8",
    "ultracite": "5.4.5"
  },
  "packageManager": "bun@1.2.22",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  }
}
